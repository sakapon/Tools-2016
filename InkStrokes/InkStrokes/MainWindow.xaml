<Window x:Class="InkStrokes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InkStrokes"
        mc:Ignorable="d"
        Title="Ink Strokes" Height="400" Width="600" FontSize="24">
    <Grid>
        <InkCanvas x:Name="TheInkCanvas"/>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="10">
            <Button x:Name="ClearButton" Content="Clear" Width="70" Height="50" Margin="10"/>
            <Button x:Name="SaveButton" Content="Save" Width="80" Height="60" Margin="10" Background="#FFFFCC66"/>
        </StackPanel>
    </Grid>
</Window>
